<?xml version="1.0" encoding="utf-8" ?>
<nlog autoReload="true" xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target enableFileDelete="true" xsi:type="File" fileName="c:\AbilityLogs\AbilityLog.log" archiveFileName="c:\AbilityLogs\AbilityLog.{##}.log" name="AbilityLogFile"  maxArchiveFiles="30" archiveEvery="Day" />
		<target xsi:type="Mail" name="mail" smtpServer="mail.cymetrix.com" from="projects@cymetrix.com"
				to="john.wallace@cymetrix.com" subject="Fatal Ability Exception"/>
	</targets>
	<rules>
		<!-- Debug Levels (in order):
				Fatal
				Error
				Warn
				Info
				Debug
				Trace
				Off
		-->
		<logger name="*" minlevel="Error" writeTo="AbilityLogFile"></logger>
		<logger name="*" minlevel="Fatal" writeTo="mail"></logger>
	</rules>
</nlog>